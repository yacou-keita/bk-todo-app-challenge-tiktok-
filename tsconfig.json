{
    "compilerOptions": {
        "outDir": "dist",
        "module": "nodenext",
        "rootDir": "src",
        "strict": true,
        "target": "es2022",
        "esModuleInterop": true,
        "moduleResolution": "nodenext",
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "paths": {"@src/*": ["src/*"]},
        "baseUrl": ".",
        "allowImportingTsExtensions": true,
        "noEmit": true,
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}